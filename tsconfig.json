{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "vscode"
    ],
    "paths": {
      "@tripsnek/tmf": ["./node_modules/@tripsnek/tmf"]
    }
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "out",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}